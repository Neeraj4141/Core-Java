package com.rays.oi;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.nio.Buffer;

public class AppendToFile {
	public static void main(String[] args) throws IOException {

		BufferedReader br = new BufferedReader(new FileReader("C:\\Users\\Win10 Pro\\Desktop\\IO\\Hello.txt"));
		BufferedReader br1 = new BufferedReader(new FileReader("C:\\Users\\Win10 Pro\\Desktop\\IO\\Neeraj.txt"));
		
		BufferedWriter bw = new BufferedWriter(new FileWriter("C:\\Users\\Win10 Pro\\Desktop\\IO\\Hello.txt"));
	
		String s = br.readLine();
		String s1 = br1.readLine();
		
		while (s != null) {
			while(s1 != null) {
				bw.write(s1);
				
			}
			bw.write(s);
		}
		br.close();
		br1.close();
		bw.close();
		
		
	}

}
